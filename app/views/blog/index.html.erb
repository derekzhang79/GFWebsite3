<div id="blog">
    <%= link_to 'XML', :action => :index, :format => :xml %>
    <div id="posts">
        <% Post.all.each do |post| %>
            <div class="post" %>
                <h2><%= post.title %></h2>
                <h3>Posted <%= time_ago_in_words post.created_at %> ago</h3>
                <p><%= post.body %></p>
                <hr class="hrMain" />
            </div>
        <% end %>
    </div>
</div>
