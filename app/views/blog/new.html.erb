<h1>New blog post</h1>
<h2>MAKE SURE YOU UPLOAD A PICTURE OR YOU WILL LOSE YOUR WORK</h2>

<%= form_for Post.new, :html => { :multipart => true }, :url => { :action => "create" } do |f| %>
    <%= f.text_field :title %>
    <br />
    <%= f.text_area :body %>
    <br />
    <%= f.file_field :photo %>
    <br />
    <%= f.submit "Save" %>
<% end %>
