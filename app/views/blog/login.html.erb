<h1>Login</h1>

<% if flash[:notice] %>
    <h2><%= flash[:notice] %></h2>
<% end %>

<%= form_tag :action => 'auth' do %>
    <div class="field">
        <%= label_tag :password, "Password" %><br />
        <%= password_field_tag :password %><br />
    </div>
    <%= submit_tag 'Login' %>
<% end %>
